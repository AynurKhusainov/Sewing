<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Designer.ItemDetailActivity">

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/image_view_fon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/front" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imageViewArticleDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/status"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp"
                    android:textColor="@color/my1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/btnBackArticleDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/head"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/txtHeaderArticleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Название товара"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />


                    <TextView
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:id="@+id/price"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="цена"
                        android:textColor="#FF5C45"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDesArticleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Детальное описание" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>